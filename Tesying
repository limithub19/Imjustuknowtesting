local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- Search the entire Workspace for ANY pet model
local function findAnyPet()
	for _, obj in ipairs(workspace:GetDescendants()) do
		if obj:IsA("Model") and obj.Name:lower():find("pet") then
			return obj
		end
	end
	return nil
end

-- Clone pet and place beside the player
local function clonePet(petModel)
	local cloned = petModel:Clone()
	cloned.Parent = workspace

	local root = Character:FindFirstChild("HumanoidRootPart")
	if root then
		cloned:PivotTo(root.CFrame * CFrame.new(2, 1.5, 0))
	end

	for _, part in cloned:GetDescendants() do
		if part:IsA("BasePart") then
			part.Anchored = true
			part.CanCollide = false
		end
	end
end

-- Main run
local pet = findAnyPet()
if pet then
	clonePet(pet)
else
	warn("‚ùå No pet found in workspace.")
end
