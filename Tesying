local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- üîß Set target username here:
local targetUsername = "PutRealUsernameHere" -- change this!

-- Wait for plots
local plots = workspace:FindFirstChild("Plots")
if not plots then
	warn("‚ùå No Plots folder found.")
	return
end

-- Find plot by username
local targetPlot = plots:FindFirstChild(targetUsername)
if not targetPlot then
	warn("‚ùå Plot not found for: " .. targetUsername)
	return
end

-- Look for a pet model inside their plot
for _, pet in ipairs(targetPlot:GetDescendants()) do
	if pet:IsA("Model") and pet.Name:lower():find("pet") then
		local cloned = pet:Clone()
		cloned.Parent = workspace
		local root = Character:FindFirstChild("HumanoidRootPart")
		if root then
			cloned:PivotTo(root.CFrame * CFrame.new(2, 1.5, 0)) -- Position beside player
		end
		for _, part in cloned:GetDescendants() do
			if part:IsA("BasePart") then
				part.Anchored = true
				part.CanCollide = false
			end
		end
		break
	end
end
