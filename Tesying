local player = game.Players.LocalPlayer
local toolbar = player:WaitForChild("PlayerGui"):FindFirstChild("Toolbar") or Instance.new("ScreenGui", player.PlayerGui)
toolbar.Name = "Toolbar"

-- Add button to toolbar
local stealButton = Instance.new("TextButton", toolbar)
stealButton.Size = UDim2.new(0, 120, 0, 40)
stealButton.Position = UDim2.new(0, 10, 1, -50)
stealButton.BackgroundColor3 = Color3.fromRGB(45, 100, 45)
stealButton.Text = "üõë Steal Pet"
stealButton.TextColor3 = Color3.new(1, 1, 1)
stealButton.Font = Enum.Font.GothamBold
stealButton.TextScaled = true

-- GUI frame
local gui = Instance.new("Frame", toolbar)
gui.Size = UDim2.new(0, 250, 0, 200)
gui.Position = UDim2.new(0, 10, 0.5, -100)
gui.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
gui.Visible = false

local usernameBox = Instance.new("TextBox", gui)
usernameBox.Size = UDim2.new(1, -10, 0, 30)
usernameBox.Position = UDim2.new(0, 5, 0, 5)
usernameBox.PlaceholderText = "Enter username"
usernameBox.Font = Enum.Font.Gotham
usernameBox.TextColor3 = Color3.new(1, 1, 1)
usernameBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
usernameBox.TextScaled = true

local petList = Instance.new("ScrollingFrame", gui)
petList.Size = UDim2.new(1, -10, 1, -45)
petList.Position = UDim2.new(0, 5, 0, 40)
petList.ScrollBarThickness = 6
petList.CanvasSize = UDim2.new(0, 0, 0, 0)
petList.BackgroundColor3 = Color3.fromRGB(40, 40, 40)

local layout = Instance.new("UIListLayout", petList)
layout.SortOrder = Enum.SortOrder.LayoutOrder

-- Show GUI
stealButton.MouseButton1Click:Connect(function()
	gui.Visible = not gui.Visible
end)

-- Clone pets when username is entered
usernameBox.FocusLost:Connect(function()
	local user = usernameBox.Text
	local plot = workspace:FindFirstChild("Plots") and workspace.Plots:FindFirstChild(user)
	if not plot then
		usernameBox.Text = "‚ùå Not Found"
		return
	end

	-- Clear previous
	for _, child in ipairs(petList:GetChildren()) do
		if child:IsA("TextButton") then child:Destroy() end
	end

	for _, item in ipairs(plot:GetDescendants()) do
		if item:IsA("Model") and item.Name:lower():find("pet") then
			local btn = Instance.new("TextButton")
			btn.Size = UDim2.new(1, -10, 0, 35)
			btn.Text = "üêæ Clone " .. item.Name
			btn.TextColor3 = Color3.new(1, 1, 1)
			btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
			btn.Font = Enum.Font.Gotham
			btn.TextScaled = true

			btn.MouseButton1Click:Connect(function()
				local clone = item:Clone()
				clone.Parent = workspace

				local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
				if hrp then
					clone:MoveTo(hrp.Position + Vector3.new(math.random(-4, 4), 0, math.random(-4, 4)))
				end
			end)

			btn.Parent = petList
		end
	end

	task.wait(0.1)
	petList.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y)
end)
