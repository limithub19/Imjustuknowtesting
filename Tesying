-- SETUP
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "StealPetUI"

-- Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 260, 0, 180)
frame.Position = UDim2.new(0.5, -130, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Active = true
frame.Draggable = true

-- TextBox
local textbox = Instance.new("TextBox", frame)
textbox.Size = UDim2.new(0.8, 0, 0.2, 0)
textbox.Position = UDim2.new(0.1, 0, 0.15, 0)
textbox.PlaceholderText = "Enter player name..."
textbox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
textbox.TextColor3 = Color3.new(1, 1, 1)

-- Button
local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(0.6, 0, 0.2, 0)
button.Position = UDim2.new(0.2, 0, 0.45, 0)
button.Text = "Steal Pet"
button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
button.TextColor3 = Color3.new(1, 1, 1)

-- Message Label
local message = Instance.new("TextLabel", frame)
message.Size = UDim2.new(1, 0, 0.2, 0)
message.Position = UDim2.new(0, 0, 0.75, 0)
message.BackgroundTransparency = 1
message.TextColor3 = Color3.new(1, 1, 1)
message.Text = ""
message.TextScaled = true

-- FUNCTION
button.MouseButton1Click:Connect(function()
    local targetName = textbox.Text
    local targetPlayer = game.Players:FindFirstChild(targetName)

    if not targetPlayer then
        message.Text = "❌ Player not found."
        return
    end

    -- Try to find pet folder
    local petFolderName = targetPlayer.Name .. "'s Pets"
    local petFolder = workspace:FindFirstChild(petFolderName)

    if not petFolder then
        message.Text = "❌ No pets folder found."
        return
    end

    local pets = petFolder:GetChildren()
    if #pets == 0 then
        message.Text = "❌ Player has no pets."
        return
    end

    -- Clone the first pet found
    local pet = pets[1]:Clone()
    pet.Parent = workspace
    pet:SetPrimaryPartCFrame(player.Character.HumanoidRootPart.CFrame * CFrame.new(3, 0, 0))
    message.Text = "✅ Stole: " .. pets[1].Name
end)
