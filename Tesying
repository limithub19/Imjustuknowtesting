local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

local plotsFolder = workspace:FindFirstChild("Plots")
if not plotsFolder then
	warn("❌ No 'Plots' folder found in Workspace.")
	return
end

local function cloneFirstPet()
	for _, plot in ipairs(plotsFolder:GetChildren()) do
		for _, obj in ipairs(plot:GetDescendants()) do
			if obj:IsA("Model") and obj.Name:lower():find("pet") then
				local cloned = obj:Clone()
				cloned.Parent = workspace

				local root = Character:FindFirstChild("HumanoidRootPart")
				if root then
					cloned:PivotTo(root.CFrame * CFrame.new(2, 1.5, 0)) -- place beside player
				end

				for _, part in cloned:GetDescendants() do
					if part:IsA("BasePart") then
						part.Anchored = true
						part.CanCollide = false
					end
				end

				print("✅ Pet cloned successfully from a plot!")
				return true
			end
		end
	end
	warn("❌ No pet found in any plots.")
	return false
end

cloneFirstPet()
