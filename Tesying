local player = game.Players.LocalPlayer
local players = game:GetService("Players")

-- UI Setup
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "GrowAGardenFakePets"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 300)
frame.Position = UDim2.new(0.5, -125, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(40, 0, 60)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

local uilist = Instance.new("UIListLayout", frame)
uilist.SortOrder = Enum.SortOrder.LayoutOrder
uilist.Padding = UDim.new(0, 4)

local title = Instance.new("TextLabel", frame)
title.Text = "üå± Server Players"
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(60, 0, 90)
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBold
title.TextScaled = true

local playerList = Instance.new("ScrollingFrame", frame)
playerList.Size = UDim2.new(1, 0, 0.4, 0)
playerList.CanvasSize = UDim2.new(0, 0, 0, 0)
playerList.BackgroundColor3 = Color3.fromRGB(30, 0, 40)
playerList.BorderSizePixel = 0
playerList.AutomaticCanvasSize = Enum.AutomaticSize.Y
playerList.ScrollBarThickness = 4

local playerListLayout = Instance.new("UIListLayout", playerList)
playerListLayout.Padding = UDim.new(0, 2)

local selectedPlayer = nil

local function spawnPet(petName)
	if not selectedPlayer then return end
	local fakePet = Instance.new("Model", workspace)
	fakePet.Name = petName .. " (Fake)"

	local head = Instance.new("Part", fakePet)
	head.Size = Vector3.new(2, 2, 2)
	head.Position = selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("HumanoidRootPart") and selectedPlayer.Character.HumanoidRootPart.Position + Vector3.new(math.random(2,4), 0, 0) or Vector3.new(0,5,0)
	head.Anchored = true
	head.BrickColor = BrickColor.Random()
	head.Material = Enum.Material.SmoothPlastic

	local decal = Instance.new("Decal", head)
	decal.Face = Enum.NormalId.Front

	-- Simple face per pet
	local petFaces = {
		Kitsune = "rbxassetid://707795627",
		["Corrupted Kitsune"] = "rbxassetid://707795627",
		Raccoon = "rbxassetid://707794659",
		Mimic = "rbxassetid://707794833",
		Octopus = "rbxassetid://707795230",
		["Moon Cat"] = "rbxassetid://707794994",
		["Plant Golem"] = "rbxassetid://707794729",
		Ghost = "rbxassetid://707794376",
		Bunny = "rbxassetid://707795009"
	}
	decal.Texture = petFaces[petName] or "rbxassetid://707795627"
end

-- Pet list
local pets = {"Kitsune", "Corrupted Kitsune", "Raccoon", "Mimic", "Octopus", "Moon Cat", "Plant Golem", "Ghost", "Bunny"}

-- UI for pet buttons
local petLabel = Instance.new("TextLabel", frame)
petLabel.Text = "üêæ Pet Spawner"
petLabel.Size = UDim2.new(1, 0, 0, 25)
petLabel.BackgroundColor3 = Color3.fromRGB(60, 0, 90)
petLabel.TextColor3 = Color3.new(1,1,1)
petLabel.Font = Enum.Font.GothamBold
petLabel.TextScaled = true

local petList = Instance.new("ScrollingFrame", frame)
petList.Size = UDim2.new(1, 0, 0.4, 0)
petList.CanvasSize = UDim2.new(0, 0, 0, 0)
petList.BackgroundColor3 = Color3.fromRGB(20, 0, 30)
petList.BorderSizePixel = 0
petList.AutomaticCanvasSize = Enum.AutomaticSize.Y
petList.ScrollBarThickness = 4

local petLayout = Instance.new("UIListLayout", petList)
petLayout.Padding = UDim.new(0, 2)

-- Create pet buttons
for _, petName in ipairs(pets) do
	local petBtn = Instance.new("TextButton", petList)
	petBtn.Size = UDim2.new(1, 0, 0, 28)
	petBtn.Text = petName
	petBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 110)
	petBtn.TextColor3 = Color3.new(1, 1, 1)
	petBtn.Font = Enum.Font.Gotham
	petBtn.TextScaled = true

	petBtn.MouseButton1Click:Connect(function()
		spawnPet(petName)
	end)
end

-- Create player buttons
for _, p in ipairs(players:GetPlayers()) do
	local btn = Instance.new("TextButton", playerList)
	btn.Size = UDim2.new(1, 0, 0, 28)
	btn.Text = p.DisplayName
	btn.BackgroundColor3 = Color3.fromRGB(80, 0, 120)
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.Gotham
	btn.TextScaled = true

	btn.MouseButton1Click:Connect(function()
		selectedPlayer = p
	end)
end

-- Refresh player list on join
players.PlayerAdded:Connect(function(p)
	local btn = Instance.new("TextButton", playerList)
	btn.Size = UDim2.new(1, 0, 0, 28)
	btn.Text = p.DisplayName
	btn.BackgroundColor3 = Color3.fromRGB(80, 0, 120)
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.Gotham
	btn.TextScaled = true

	btn.MouseButton1Click:Connect(function()
		selectedPlayer = p
	end)
end)

-- Toggle Button
local toggleBtn = Instance.new("TextButton", gui)
toggleBtn.Size = UDim2.new(0, 60, 0, 30)
toggleBtn.Position = UDim2.new(0, 10, 0, 10)
toggleBtn.Text = "üü™"
toggleBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 120)
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextScaled = true

local visible = true
toggleBtn.MouseButton1Click:Connect(function()
	visible = not visible
	frame.Visible = visible
end)
