local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- UI Setup
local gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
gui.Name = "PetStealerGUI"
gui.ResetOnSpawn = false

-- Toggle Button
local toggleBtn = Instance.new("TextButton", gui)
toggleBtn.Size = UDim2.new(0, 120, 0, 40)
toggleBtn.Position = UDim2.new(0, 20, 0.5, -20)
toggleBtn.Text = "🐾 Steal Pets"
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleBtn.TextColor3 = Color3.new(1,1,1)
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextScaled = true
toggleBtn.ZIndex = 10

-- Main UI Frame
local frame = Instance.new("Frame", gui)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
frame.BorderSizePixel = 0
frame.Position = UDim2.new(0.2, 0, 0.1, 0)
frame.Size = UDim2.new(0.6, 0, 0.8, 0)
frame.Visible = false
frame.Active = true
frame.Draggable = true

-- Sidebar for players
local sidebar = Instance.new("Frame", frame)
sidebar.Size = UDim2.new(0.3, 0, 1, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(40, 40, 55)

local playerList = Instance.new("UIListLayout", sidebar)
playerList.SortOrder = Enum.SortOrder.LayoutOrder
playerList.Padding = UDim.new(0, 4)

-- Main panel for pets
local mainPanel = Instance.new("ScrollingFrame", frame)
mainPanel.Size = UDim2.new(0.7, 0, 1, 0)
mainPanel.Position = UDim2.new(0.3, 0, 0, 0)
mainPanel.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
mainPanel.CanvasSize = UDim2.new(0,0,5,0)

local petListLayout = Instance.new("UIListLayout", mainPanel)
petListLayout.SortOrder = Enum.SortOrder.LayoutOrder
petListLayout.Padding = UDim.new(0, 6)

-- Success Message
local successMsg = Instance.new("TextLabel", gui)
successMsg.Size = UDim2.new(0.5, 0, 0.1, 0)
successMsg.Position = UDim2.new(0.25, 0, 0.45, 0)
successMsg.BackgroundTransparency = 1
successMsg.TextColor3 = Color3.fromRGB(255, 255, 255)
successMsg.TextScaled = true
successMsg.Font = Enum.Font.GothamBold
successMsg.Visible = false
successMsg.ZIndex = 10

local function showMessage(text)
	successMsg.Text = text
	successMsg.Visible = true
	successMsg.TextTransparency = 1
	successMsg:TweenTransparency(0, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
	task.delay(1.5, function()
		successMsg:TweenTransparency(1, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.5, true)
	end)
end

-- Toggle UI
toggleBtn.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)

-- Load player pet sets
local function loadPetsForPlayer(targetPlayer)
	mainPanel:ClearAllChildren()
	local pets = {"Kitsune", "Raccoon", "Mimic", "Octopus", "Corrupted Kitsune", "Dragonfly", "Trex"}
	local maxPerPet = {}
	for _, pet in ipairs(pets) do
		maxPerPet[pet] = math.random(1, 2)
	end

	for _, petName in ipairs(pets) do
		local max = maxPerPet[petName]
		local btn = Instance.new("TextButton")
		btn.Size = UDim2.new(1, -12, 0, 40)
		btn.BackgroundColor3 = Color3.fromRGB(55, 55, 75)
		btn.TextColor3 = Color3.new(1,1,1)
		btn.TextScaled = true
		btn.Font = Enum.Font.Gotham
		btn.Text = petName .. " (" .. max .. ")"

		btn.MouseButton1Click:Connect(function()
			if max > 0 then
				local success = pcall(function()
					Spawner.SpawnPet(petName, math.random(1,3), math.random(1,2))
				end)
				if success then
					max -= 1
					btn.Text = petName .. " (" .. max .. ")"
					showMessage("Successfully stole " .. petName .. " from " .. targetPlayer.Name)
					if max == 0 then
						btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
						btn.AutoButtonColor = false
					end
				end
			end
		end)

		btn.Parent = mainPanel
	end
end

-- Populate sidebar
for _, plr in ipairs(Players:GetPlayers()) do
	if plr ~= LocalPlayer then
		local btn = Instance.new("TextButton")
		btn.Size = UDim2.new(1, -10, 0, 40)
		btn.BackgroundColor3 = Color3.fromRGB(70, 70, 90)
		btn.TextColor3 = Color3.new(1,1,1)
		btn.Font = Enum.Font.GothamBold
		btn.TextScaled = true
		btn.Text = plr.Name

		btn.MouseButton1Click:Connect(function()
			for _, child in ipairs(sidebar:GetChildren()) do
				if child:IsA("TextButton") then
					child.BackgroundColor3 = Color3.fromRGB(70, 70, 90)
				end
			end
			btn.BackgroundColor3 = Color3.fromRGB(90, 90, 120)
			loadPetsForPlayer(plr)
		end)

		btn.Parent = sidebar
	end
end
